{
    "manifest_version": 2,
    "name": "Budget Manager",
    "version": "1.0.0",
    "description": "This is for my practice",
    "short_name": "HW",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "notifications",
        "contextMenus",
        "tabs"
    ],
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["background.css"],
            "js": ["background.js"]
        }
    ],
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "This is a practice app",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}
